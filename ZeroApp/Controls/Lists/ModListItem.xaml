<UserControl x:Class="ZeroApp.Controls.Lists.ModListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZeroApp.Controls.Lists"
             mc:Ignorable="d" 
             Name="modListItem"
             d:DesignHeight="60" d:DesignWidth="360">
    <Grid>
        <Button>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid Margin="5,0,6,0" Height="26">
                        <!-- <Image Height="26" Width="26" Source="pack://application:,,,/.zeroapp/media/box.png" HorizontalAlignment="Left" /> -->
                        <Label Content="{Binding m_Name, ElementName=modListItem}" ToolTip="{Binding m_Name, ElementName=modListItem}" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Stretch" Foreground="White" FontWeight="Bold" />
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>            
    </Grid>
</UserControl>

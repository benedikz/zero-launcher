<UserControl x:Class="ZeroApp.Controls.Lists.RepositoryListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZeroApp.Controls.Lists"
             mc:Ignorable="d"
             Name="repoListItem"
             d:DesignHeight="60" d:DesignWidth="360">
    <Grid>
        <Grid>
            <Image Width="48" Height="48" Margin="6,0" HorizontalAlignment="Left" Source="{Binding R_Miniature,ElementName=repoListItem}" />
            <Label Content="{Binding R_Name, ElementName=repoListItem}" ToolTip="{Binding R_Name, ElementName=repoListItem}" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Width="291" HorizontalAlignment="Left" Foreground="White" FontWeight="Bold" Margin="69,13,0,13"/>
        </Grid>
    </Grid>
</UserControl>

<UserControl x:Class="ZeroApp.Controls.Lists.RepositoryListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZeroApp.Controls.Lists"
             mc:Ignorable="d"
             Name="repoListItem"
             d:DesignHeight="60" d:DesignWidth="360">
    <Grid>
        <Button>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Image Width="48" Height="48" Margin="6,0" HorizontalAlignment="Left" Source="{Binding R_Miniature,ElementName=repoListItem}" />
                        <TextBlock TextTrimming="WordEllipsis" Text="{Binding R_Name, ElementName=repoListItem}"  Width="291" Height="19" HorizontalAlignment="Left" Foreground="White" FontWeight="Bold" Margin="69,13,0,28"></TextBlock>
                        <TextBlock TextTrimming="WordEllipsis" Text="{Binding R_Source, ElementName=repoListItem}"  Width="290" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ABABAB" Margin="69,30,0,0" />
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>
